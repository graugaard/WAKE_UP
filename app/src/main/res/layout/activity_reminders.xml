<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:weightSum = "1.0"
                tools:context="com.kennethogjakob9000.wakeup.RemindersActivity">
    <EditText
        android:id="@+id/user_option"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="User to ignore"/>
    <LinearLayout
        android:id="@+id/ignore_remind_buttons"
        android:layout_width="fill_parent"
        android:layout_below="@+id/user_option"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/remind_button"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:text="@string/remind"
        android:layout_below="@id/user_option"
        android:layout_alignParentLeft="true"
        android:onClick="remind"/>
    <Button
        android:id="@+id/ignore_button"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:text="@string/ignore"
        android:layout_below="@id/user_option"
        android:layout_alignParentRight="true"
        android:onClick="ignore"/>
    </LinearLayout>
    <Button
        android:id="@+id/return_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/map"
        android:layout_below="@+id/ignore_remind_buttons"
        android:onClick="returnToMap"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/return_button">

    </ListView>
</RelativeLayout>
